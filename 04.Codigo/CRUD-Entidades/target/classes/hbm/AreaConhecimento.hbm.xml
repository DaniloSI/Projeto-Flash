<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="flash">
    <class name="model.dominio.AreaConhecimento" table="area_conhecimento">
        <meta attribute="class-description">
            Essa classe contem informacoes relacionada a area de conhecimento.
        </meta>
        <id name="id" column="area_conhecimento_id" type="int">
            <generator class="sequence">
                <param name="sequence">area_conhecimento_area_conhecimento_id_seq_1</param>
            </generator>
        </id>
        <property name="descricao"/>

    </class>
</hibernate-mapping>