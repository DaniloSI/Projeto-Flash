<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="flash">
    <class name="model.dominio.Curso" table="curso">
        <meta attribute="class-description">
            Essa classe contem informacoes relacionada ao curso.
        </meta>
        <id name="id" column="curso_id" type="int">
            <generator class="sequence">
                <param name="sequence">curso_curso_id_seq_1</param>
            </generator>
        </id>
        <property name="nome"/>
        <property name="regime"/>
        <property name="duracao"/>
        <property name="sigla"/>

    </class>
</hibernate-mapping>